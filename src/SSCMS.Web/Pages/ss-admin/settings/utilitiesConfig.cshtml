@page
@{ Layout = "_Layout"; }

<div style="height: 10px"></div>

<el-form v-on:submit.native.prevent ref="form" :model="form" size="small" status-icon label-width="260px">
  <el-form-item label="素材库跨站设置">
    <el-radio v-model="form.isMaterialSiteOnly" :label="true">禁用素材库跨站</el-radio>
    <el-radio v-model="form.isMaterialSiteOnly" :label="false">启用素材库跨站</el-radio>
    <div class="tips">禁用后站点将无法获取及管理其他站点的素材（图片、视频、音频、文件等）</div>
  </el-form-item>
</el-form>

<el-divider></el-divider>
<div style="height: 10px"></div>

<el-row>
  <el-col :span="24" align="center">
    <el-button type="primary" v-on:click="btnSubmitClick" size="small">确 定</el-button>
  </el-col>
</el-row>

@section Scripts{
<script src="/sitefiles/assets/js/admin/settings/utilitiesConfig.js" type="text/javascript"></script> }