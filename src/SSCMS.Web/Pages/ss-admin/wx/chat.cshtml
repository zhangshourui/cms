      label="头像" width="80">
      <template slot-scope="scope">
        <el-avatar :size="36" :src="getUserAvatarUrl(scope.row)"></el-avatar>
      </template>
    </el-table-column>
    <el-table-column
      width="120"
      label="昵称">
      <template slot-scope="scope">
        <el-link :underline="false" type="primary">
          {{getUserTitle(scope.row)}}
        </el-link>
      </template>
    </el-table-column>
    <el-table-column
      prop="text"
      label="内容">
    </el-table-column>
    <el-table-column
      width="120"
      label="时间">
      <template slot-scope="scope">
